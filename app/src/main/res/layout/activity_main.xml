<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <Button
        android:text="live head auto play"
        android:id="@+id/buttonLiveHeadAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="vod head auto play"
        android:id="@+id/buttonVODHeadAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="watching detail"
        android:id="@+id/buttonWatchDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="list auto"
        android:id="@+id/buttonListAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>